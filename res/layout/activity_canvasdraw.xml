<?xml version="1.0" encoding="utf-8"?>

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res/com.mobeegen.kitchensink"
	android:id="@+id/ActivityCanvasDrawLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffff"
	android:gravity="top"
	android:orientation="vertical" >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:orientation="horizontal">
     <Button
         android:id="@+id/btnCanvasDrawClear"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Clear" />

     <Button
         android:id="@+id/btnCanvasDrawSave"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Save" />
     
      <Button
         android:id="@+id/btnCanvasDrawUpload"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Upload" />
     </LinearLayout>

     <RelativeLayout
         android:id="@+id/CanvasDrawContainerLayout"
         android:layout_width="match_parent"
         android:layout_height="match_parent" >
     </RelativeLayout>
         
 </LinearLayout>