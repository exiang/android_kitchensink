<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/scroll" android:layout_width="fill_parent"
  android:layout_height="wrap_content">
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res/com.mobeegen.kitchensink"
	android:id="@+id/ActivityDoorLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffff"
	android:gravity="top"
	android:orientation="vertical" >

     <FrameLayout
	       xmlns:android="http://schemas.android.com/apk/res/android"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_gravity="center_vertical|center_horizontal"
	       android:layout_margin="7dp"
	       android:background="#ff0000"
	       android:padding="5dp">
		<ImageView
		    android:id="@+id/imageViewScale"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical|center_horizontal|center|fill"
		    android:adjustViewBounds="true"
		    android:scaleType="centerCrop"
		    android:src="@drawable/im_koala" />
	
	</FrameLayout>>
         
 </LinearLayout>
</ScrollView>